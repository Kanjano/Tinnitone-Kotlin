<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://schemas.android.com/apk/res/android">

    <!-- Text: "Benvenuto su TinniTone" -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benvenuto su TinniTone"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"/>

    <!-- Circular Image with Ear Icon -->
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/oval"/>

        <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_ear_icon"
                android:textStyle="bold"/>

    </FrameLayout>

    <!-- Text: "Un app per persone che soffrono di tinnutus" -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un app per persone che soffrono di tinnutus"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center"/>

    <!-- Spacer -->
    <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <!-- Text: "Calibration" (hidden) -->
    <TextView
            android:id="@+id/calibrationText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Calibration"
            android:textSize="18sp"
            android:textStyle="normal"
            android:padding="16dp"
            android:background="#FFFF00"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:visibility="gone"/>

</LinearLayout>
